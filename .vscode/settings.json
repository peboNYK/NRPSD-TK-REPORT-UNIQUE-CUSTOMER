{
    "python.defaultInterpreterPath": "${workspaceFolder}/.venv/bin/python",
    "python.terminal.executeInFileDir": false,
    "workbench.colorTheme": "Visual Studio Dark",
    "workbench.startupEditor": "none",
    "workbench.iconTheme": "ayu",
    "git.autofetch": true,
    "git.confirmForcePush": false,
    "git.confirmSync": false,
    "python.testing.unittestEnabled": false,
    "python.testing.pytestEnabled": true,
    "interactiveWindow.collapseCellInputCode": "never",
    "[python]": {
        "editor.codeActionsOnSave": {
            "source.organizeImports": "explicit"
        },
        "editor.defaultFormatter": "ms-python.black-formatter",
        "editor.formatOnSave": true
    },
    "python.testing.pytestArgs": [
        "tests"
    ],
    "jupyter.interactiveWindow.cellMarker.decorateCells": "None", 
    "jupyter.interactiveWindow.codeLens.enable": false,
    "jupyter.notebookFileRoot": "${workspaceFolder}/src", 
    "jupyter.stopOnFirstLineWhileDebugging": false,
    "python.testing.cwd": "${workspaceFolder}", 
    "terminal.integrated.cwd": "${workspaceFolder}/src", 
    "python.autoComplete.extraPaths": ["${workspaceFolder}/src"], 
    "task.problemMatchers.neverPrompt": true, 
}